<%= render PageWrappers::PageComponent.new(fantasy_team: @fantasy_team) do %>
  <% if @lineup %>
    <div class="grid grid-cols-4 gap-8">
      <%=
        react_component 'SquadPoints',
          component_class: 'col-span-3',
          seasonUuid: @season.uuid,
          sportKind: @season.league.sport_kind,
          lineupUuid: @lineup.uuid,
          weekUuid: @lineup.week.uuid,
          weekPosition: @lineup.week.position,
          points: @lineup.points,
          averagePoints: @lineup.week.lineups.average(:points).round,
          maxPoints: @lineup.week.lineups.maximum(:points),
          previousPointsUrl: @lineup.week.position > 1 && @lineup.week.opponent_visible? ? fantasy_team_points_url(@fantasy_team.uuid, week: @lineup.week.position - 1) : nil,
          nextPointsUrl: @lineup.week.finished? ? fantasy_team_points_url(@fantasy_team.uuid, week: @lineup.week.position + 1) : nil
      %>
      <%= render Views::Shared::StatisticComponent.new(fantasy_team: @fantasy_team) %>
    </div>
  <% else %>
    <h2><%= t('views.fantasy_teams.points.index.no_lineups') %></h2>
  <% end %>
<% end %>
