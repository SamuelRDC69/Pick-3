<h1><%= t('views.admin.seasons.index.new_season') %></h1>
<section>
  <%= form_with model: @season, url: admin_seasons_path, method: :post do |form| %>
    <div class="form-field">
      <%= form.label :name, t('views.admin.seasons.new.name'), class: 'form-label' %>
      <%= form.text_field :name, class: 'form-value' %>
    </div>
    <div class="form-field">
      <%= form.label :active, t('views.admin.seasons.new.active'), class: 'form-label' %>
      <%= form.check_box :active, class: 'form-value' %>
    </div>
    <div class="form-field">
      <%= form.label :league_id, t('views.admin.seasons.new.league_id'), class: 'form-label' %>
      <%= form.select :league_id, @leagues.map { |league| [localized_value(league.name), league.id] }, class: 'form-value' %>
    </div>
    <%= form.submit t('views.admin.seasons.new.create'), class: 'btn-primary' %>
  <% end %>
</section>
