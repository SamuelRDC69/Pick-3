<h1><%= t('views.admin.seasons.teams_players.new.title') %></h1>
<section>
  <%= form_with model: @teams_player, url: admin_season_teams_players_path(@season.uuid, @teams_player.uuid), method: :post do |form| %>
    <div class="form-field">
      <%= form.label :player_id, t('views.admin.seasons.teams_players.new.player_id'), class: 'form-label' %>
      <%= form.select :player_id, @inactive_players.map { |player| [localized_value(player[:name]), player[:id]] }, {}, class: 'form-value w-52' %>
    </div>
    <div class="form-field">
      <%= form.label :seasons_team_id, t('views.admin.seasons.teams_players.new.seasons_team_id'), class: 'form-label' %>
      <%= form.select :seasons_team_id, @seasons_teams.map { |team| [localized_value(team[:name]), team[:id]] }, {}, class: 'form-value w-52' %>
    </div>
    <div class="form-field">
      <%= form.label :price_cents, t('views.admin.seasons.teams_players.edit.price_cents'), class: 'form-label' %>
      <%= form.text_field :price_cents, class: 'form-value' %>
    </div>
    <div class="form-field">
      <%= form.label :shirt_number, t('views.admin.seasons.teams_players.edit.shirt_number'), class: 'form-label' %>
      <%= form.text_field :shirt_number, class: 'form-value' %>
    </div>
    <div class="form-field">
      <%= form.label :form, t('views.admin.seasons.teams_players.edit.form'), class: 'form-label' %>
      <%= form.text_field :form, class: 'form-value' %>
    </div>
    <%= form.submit t('views.admin.seasons.teams_players.edit.save'), class: 'btn-primary' %>
  <% end %>
</section>
