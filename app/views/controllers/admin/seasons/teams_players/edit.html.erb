<h1><%= t('views.admin.seasons.teams_players.edit.title') %></h1>
<h2><%= localized_value(@teams_player.player.name) %></h2>
<section>
  <%= form_with model: @teams_player, url: admin_season_teams_player_path(@season.uuid, @teams_player.uuid), method: :patch do |form| %>
    <div class="form-field">
      <%= form.label :active, t('views.admin.seasons.teams_players.edit.active'), class: 'form-label' %>
      <%= form.check_box :active, class: 'form-value' %>
    </div>
    <div class="form-field">
      <%= form.label :price_cents, t('views.admin.seasons.teams_players.edit.price_cents'), class: 'form-label' %>
      <%= form.text_field :price_cents, class: 'form-value' %>
    </div>
    <div class="form-field">
      <%= form.label :shirt_number_string, t('views.admin.seasons.teams_players.edit.shirt_number'), class: 'form-label' %>
      <%= form.text_field :shirt_number_string, class: 'form-value' %>
    </div>
    <%= form.submit t('views.admin.seasons.teams_players.edit.save'), class: 'btn-primary' %>
  <% end %>
</section>
