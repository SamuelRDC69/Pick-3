<h1><%= t('views.admin.seasons.games.edit.title') %></h1>
<section>
  <%= form_with model: @game, url: admin_season_game_path(@season.uuid, @game.uuid), method: :patch do |form| %>
    <div class="form-field">
      <%= form.label :week_id, t('views.admin.seasons.games.index.week'), class: 'form-label' %>
      <%= form.select :week_id, @weeks, class: 'form-value', include_blank: true %>
    </div>
    <div class="form-field">
      <%= form.label :start_at, t('views.admin.seasons.games.index.start_time'), class: 'form-label' %>
      <%= form.text_field :start_at, value: @game.start_at.strftime('%Y-%m-%d %H:%M'), placeholder: '2024-01-31 12:13', class: 'form-value' %>
    </div>
    <%= form.submit t('views.admin.seasons.games.new.save'), class: 'btn-primary' %>
  <% end %>
</section>
