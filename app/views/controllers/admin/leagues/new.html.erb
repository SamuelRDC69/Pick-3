<h1><%= t('views.admin.leagues.index.new_league') %></h1>
<section>
  <%= form_with model: @league, url: admin_leagues_path, method: :post do |form| %>
    <div class="form-field">
      <%= form.label :name_en, t('views.admin.leagues.new.name_en'), class: 'form-label' %>
      <%= form.text_field :name_en, class: 'form-value' %>
    </div>
    <div class="form-field">
      <%= form.label :name_ru, t('views.admin.leagues.new.name_ru'), class: 'form-label' %>
      <%= form.text_field :name_ru, class: 'form-value' %>
    </div>
    <div class="form-field">
      <%= form.label :sport_kind, t('views.admin.leagues.new.sport_kind'), class: 'form-label' %>
      <%= form.select :sport_kind, Sport.all.pluck(:title).map { |sport_kind| [sport_kind.capitalize, sport_kind] }, class: 'form-value' %>
    </div>
    <%= form.submit t('views.admin.leagues.new.create'), class: 'btn-primary' %>
  <% end %>
</section>
