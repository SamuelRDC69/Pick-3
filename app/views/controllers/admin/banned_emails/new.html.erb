<h1><%= t('views.admin.banned_emails.new.title') %></h1>
<section>
  <%= form_with model: @banned_email, url: admin_banned_emails_path, method: :post do |form| %>
    <div class="form-field">
      <%= form.label :value, t('views.admin.banned_emails.index.value'), class: 'form-label' %>
      <%= form.text_field :value, class: 'form-value' %>
    </div>
    <div class="form-field">
      <%= form.label :reason, t('views.admin.banned_emails.index.reason'), class: 'form-label' %>
      <%= form.text_field :reason, class: 'form-value' %>
    </div>
    <%= form.submit t('views.admin.banned_emails.new.create'), class: 'btn-primary' %>
  <% end %>
</section>
