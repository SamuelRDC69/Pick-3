<h1><%= t('views.admin.cups.rounds.index.new_cups_round') %></h1>
<section>
  <%= form_with model: @cups_round, url: admin_cup_rounds_path(cap_id: params[:cap_id]), method: :post do |form| %>
    <div class="form-field">
      <%= form.label :name, t('views.admin.cups.rounds.index.name'), class: 'form-label' %>
      <%= form.text_field :name, class: 'form-value' %>
    </div>
    <div class="form-field">
      <%= form.label :position, t('views.admin.cups.rounds.index.position'), class: 'form-label' %>
      <%= form.text_field :position, class: 'form-value' %>
    </div>
    <%= form.submit t('views.admin.cups.rounds.new.create'), class: 'btn-primary' %>
  <% end %>
</section>
