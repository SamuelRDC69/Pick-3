<h1><%= t('views.admin.cups.rounds.index.edit_cups_round') %></h1>
<section>
  <%= form_with model: @cups_round, url: admin_cup_round_path(cap_id: params[:cap_id], id: params[:id]), method: :patch do |form| %>
    <div class="form-field">
      <%= form.label :name, t('views.admin.cups.rounds.index.name'), class: 'form-label' %>
      <%= form.text_field :name, value: @cups_round.name, class: 'form-value' %>
    </div>
    <div class="form-field">
      <%= form.label :position, t('views.admin.cups.rounds.index.position'), class: 'form-label' %>
      <%= form.text_field :position, value: @cups_round.position, class: 'form-value' %>
    </div>
    <div class="form-field">
      <%= form.label :status, t('views.admin.cups.rounds.index.status'), class: 'form-label' %>
      <%= form.select :status, options_for_select(Cups::Round.statuses.keys, @cups_round.status), class: 'form-value' %>
    </div>
    <%= form.submit t('views.admin.cups.rounds.edit.update'), class: 'btn-primary' %>
  <% end %>
</section>
