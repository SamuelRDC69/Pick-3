<h1><%= t('views.admin.cups.index.new_cup') %></h1>
<section>
  <%= form_with model: @cup, url: admin_cups_path, method: :post do |form| %>
    <div class="form-field">
      <%= form.label :name_en, t('views.admin.cups.new.name_en'), class: 'form-label' %>
      <%= form.text_field :name_en, class: 'form-value' %>
    </div>
    <div class="form-field">
      <%= form.label :name_ru, t('views.admin.cups.new.name_ru'), class: 'form-label' %>
      <%= form.text_field :name_ru, class: 'form-value' %>
    </div>
    <div class="form-field">
      <%= form.label :active, t('views.admin.cups.new.active'), class: 'form-label' %>
      <%= form.check_box :active, class: 'form-value' %>
    </div>
    <div class="form-field">
      <%= form.label :league_id, t('views.admin.cups.new.league_id'), class: 'form-label' %>
      <%= form.select :league_id, @leagues.map { |league| [localized_value(league.name), league.id] }, class: 'form-value' %>
    </div>
    <%= form.submit t('views.admin.cups.new.create'), class: 'btn-primary' %>
  <% end %>
</section>
