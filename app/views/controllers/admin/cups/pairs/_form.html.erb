<div class="flex">
  <div class="form-field mr-4">
    <%= form.label :home_name_en, t('views.admin.cups.pairs.new.home_name_en'), class: 'form-label' %>
    <%= form.text_field :home_name_en, value: @cups_pair&.home_name ? @cups_pair.home_name['en'] : nil, class: 'form-value' %>
  </div>
  <div class="form-field">
    <%= form.label :home_name_ru, t('views.admin.cups.pairs.new.home_name_ru'), class: 'form-label' %>
    <%= form.text_field :home_name_ru, value: @cups_pair&.home_name ? @cups_pair.home_name['ru'] : nil, class: 'form-value' %>
  </div>
</div>
<div class="flex">
  <div class="form-field mr-4">
    <%= form.label :visitor_name_en, t('views.admin.cups.pairs.new.visitor_name_en'), class: 'form-label' %>
    <%= form.text_field :visitor_name_en, value: @cups_pair&.visitor_name ? @cups_pair.visitor_name['en'] : nil, class: 'form-value' %>
  </div>
  <div class="form-field">
    <%= form.label :visitor_name_ru, t('views.admin.cups.pairs.new.visitor_name_ru'), class: 'form-label' %>
    <%= form.text_field :visitor_name_ru, value: @cups_pair&.visitor_name ? @cups_pair.visitor_name['ru'] : nil, class: 'form-value' %>
  </div>
</div>
<div class="form-field">
  <%= form.label :start_at, t('views.admin.cups.pairs.index.start_at'), class: 'form-label' %>
  <%= form.text_field :start_at, value: @cups_pair.start_at&.strftime('%Y-%m-%d %H:%M'), placeholder: '2024-01-31 12:13', class: 'form-value' %>
</div>
<div class="form-field">
  <%= form.label :points, t('views.admin.cups.pairs.index.points'), class: 'form-label' %>
  <%= form.text_field :points, value: @cups_pair.points&.join('-'), placeholder: '2-1', class: 'form-value' %>
</div>
