<div class="flex">
  <div class="form-field mr-4">
    <%= form.label :first_name_en, t('views.admin.players.new.first_name_en'), class: 'form-label' %>
    <%= form.text_field :first_name_en, value: @player ? @player.first_name['en'] : nil, class: 'form-value' %>
  </div>
  <div class="form-field">
    <%= form.label :first_name_ru, t('views.admin.players.new.first_name_ru'), class: 'form-label' %>
    <%= form.text_field :first_name_ru, value: @player ? @player.first_name['ru'] : nil, class: 'form-value' %>
  </div>
</div>
<div class="flex">
  <div class="form-field mr-4">
    <%= form.label :last_name_en, t('views.admin.players.new.last_name_en'), class: 'form-label' %>
    <%= form.text_field :last_name_en, value: @player ? @player.last_name['en'] : nil, class: 'form-value' %>
  </div>
  <div class="form-field">
    <%= form.label :last_name_ru, t('views.admin.players.new.last_name_ru'), class: 'form-label' %>
    <%= form.text_field :last_name_ru, value: @player ? @player.last_name['ru'] : nil, class: 'form-value' %>
  </div>
</div>
<div class="flex">
  <div class="form-field mr-4">
    <%= form.label :nickname_en, t('views.admin.players.new.nickname_en'), class: 'form-label' %>
