<%= render PageWrappers::GuestComponent.new do %>
  <% cache(['welcome_index_v1', Current.user&.id, I18n.locale], expires_in: 24.hours) do %>
    <section class="grid grid-cols-1 xl:grid-cols-2 gap-8 mx-auto mt-16 mb-8 xl:my-24">
      <div class="flex-1 flex flex-col justify-center lg:pr-16">
        <h1 class="text-center lg:text-left"><%= t('views.welcome.title') %></h1>
        <p class="text-lg leading-8 mb-4 text-center lg:text-left"><%= t('views.welcome.description') %></p>
        <% if Current.user.nil? %>
          <div class="flex mb-4">
            <%= link_to t('components.page_wrappers.users_component.login'), users_login_path, class: 'btn-primary mr-2' %>
            <%= link_to t('components.page_wrappers.users_component.sign_up'), users_sign_up_path, class: 'btn-primary' %>
          </div>
        <% else %>
          <div class="flex mb-4">
            <%= link_to t('views.welcome.home'), draft_players_path, class: 'btn-primary mr-4' %>
            <%= link_to t('components.views.shared.fantasy_team_navigation_component.oracul_places'), oracul_places_path, class: 'btn-primary mr-4' %>
          </div>
        <% end %>
      </div>
      <div class="flex-1 flex flex-col justify-center lg:items-center">
        <%= image_tag 'football-screenshot.webp', width: 616, height: 355, alt: 'interface-example', class: 'border border-stone-200 rounded' %>
      </div>
    </section>
    <section class="mx-auto mb-8 xl:mb-24">
      <h2 class="text-center text-4xl mb-12"><%= t('views.welcome.modes') %></h2>
      <div class="flex flex-col md:flex-row md:gap-20 mb-16">
        <div class="flex-1 mb-8 md:mb-0 pt-0 md:pt-12">
          <h3 class="text-3xl"><%= t('views.welcome.active_leagues') %></h3>
          <p class="mb-4"><%= t('views.welcome.active_leagues_list') %></p>
        </div>
        <div class="flex-1 w-full grid grid-cols-2 sm:grid-cols-3 gap-4">
          <%= image_tag league_background('English Premier League'), alt: 'fantasy premier league', class: 'h-32' %>
          <%= image_tag league_background('La Liga'), alt: 'fantasy la liga', class: 'h-32' %>
          <%= image_tag league_background('NBA'), alt: 'fantasy nba', class: 'h-32' %>
          <%= image_tag league_background('Seria A'), alt: 'fantasy serie a', class: 'h-32' %>
          <%= image_tag league_background('Russian Premier League'), alt: 'fantasy russian premier league', class: 'h-32' %>
          <%= image_tag league_background('Bundesliga'), alt: 'fantasy bundesliga', class: 'h-32' %>
        </div>
      </div>
      <div class="flex flex-col md:flex-row md:gap-20">
        <div class="flex-1">
          <%= image_tag 'predictions.webp', width: 593, height: 340, alt: 'predictions-example', class: 'border border-stone-200 rounded' %>
        </div>
        <div class="flex-1 mb-8 md:mb-0 pt-0 md:pt-12">
          <h3 class="text-3xl"><%= t('views.welcome.oraculs_leagues') %></h3>
          <p class="mb-4"><%= t('views.welcome.oraculs_leagues_description') %></p>
        </div>
      </div>
    </section>
  <% end %>
<% end %>
