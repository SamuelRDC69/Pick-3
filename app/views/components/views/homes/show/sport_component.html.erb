<div class="sport">
  <h2>
    <%= localized_value(@sport_values['name']) %>
    <%= link_to t('components.views.shared.fantasy_team_navigation_component.rules'), sport_rules_path(@sport_kind), class: 'button' %>
  </h2>
  <div class="sport-leagues">
    <% @seasons.each do |season| %>
      <div class="league">
        <h3><%= localized_value(season.league.name) %></h3>
        <%= render Views::Homes::Show::FantasyTeamLinkComponent.new(season: season, user: @user) %>
      </div>
    <% end %>
  </div>
</div>
