<div class="fixed top-12 right-8">
  <% flash.each do |key, message| %>
    <% if message.is_a?(Array) %>
      <% message.each do |value| %>
        <div class="mb-2 py-2 px-4 rounded shadow <%= key == 'notice' ? 'bg-green-400' : 'bg-red-400' %>">
          <p><%= value %></p>
        </div>
      <% end %>
    <% else %>
      <div class="mb-2 py-2 px-4 rounded shadow <%= key == 'notice' ? 'bg-green-400' : 'bg-red-400' %>">
        <%= message %>
      </div>
    <% end %>
  <% end %>
</div>
