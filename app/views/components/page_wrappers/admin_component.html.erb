<div class="flex flex-1 max-h-screen">
  <div class="w-64 bg-zinc-800 flex flex-col">
    <%= link_to t('components.page_wrappers.admin.home'), draft_players_path, class: 'admin-navigation-link' %>
    <%= link_to t('components.page_wrappers.admin.welcome'), admin_path, class: 'admin-navigation-link' %>
    <%= link_to t('components.page_wrappers.admin.leagues'), admin_leagues_path, class: 'admin-navigation-link' %>
    <%= link_to t('components.page_wrappers.admin.seasons'), admin_seasons_path, class: 'admin-navigation-link' %>
    <%= link_to t('components.page_wrappers.admin.cups'), admin_cups_path, class: 'admin-navigation-link' %>
    <%= link_to t('components.page_wrappers.admin.players'), admin_players_path, class: 'admin-navigation-link' %>
    <%= link_to t('components.page_wrappers.admin.feedbacks'), admin_feedbacks_path, class: 'admin-navigation-link' %>
    <%= link_to t('components.page_wrappers.admin.users'), admin_users_path, class: 'admin-navigation-link' %>
    <%= link_to t('components.page_wrappers.admin.banned_emails'), admin_banned_emails_path, class: 'admin-navigation-link' %>
