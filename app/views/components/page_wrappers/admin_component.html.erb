      <% I18n.available_locales.each do |locale| %>
        <%= link_to locale, change_locale(locale), aria: { label: t('components.page_wrappers.users_component.change_locale') }, class: 'text-white px-2 py-4' %>
      <% end %>
    </section>
  </div>
  <div class="flex-1 w-full p-12 overflow-y-scroll bg-zinc-100">
    <%= content %>
  </div>
</div>
